{
  "name": "poketo",
  "version": "0.2.0",
  "description": "Library for fetching and reading manga sites",
  "main": "lib/index.js",
  "repository": "https://github.com/poketo/lib",
  "files": [
    "lib",
    "supports.js"
  ],
  "keywords": [
    "manga",
    "parser"
  ],
  "scripts": {
    "clean": "rm -rf lib",
    "build": "yarn build:node && yarn build:browser",
    "build:node": "babel src -d lib --ignore '*.test.js,types.js,supports.js'",
    "build:browser": "babel --no-babelrc src/supports.js --out-file supports.js --presets=es2015,flow",
    "format": "prettier --write src/**/*.{js,json,md}",
    "prepublish": "yarn clean && yarn build",
    "lint": "flow",
    "test": "jest"
  },
  "dependencies": {
    "cheerio": "^1.0.0-rc.2",
    "got": "^8.3.0",
    "moment": "^2.22.0",
    "moment-timezone": "^0.5.14",
    "p-map": "^1.2.0",
    "p-throttle": "^1.1.0",
    "path-match": "^1.2.4",
    "probe-image-size": "^4.0.0"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-flow": "^6.23.0",
    "flow-bin": "^0.69.0",
    "jest": "^23.1.0",
    "prettier": "^1.11.1"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all"
  },
  "license": "MIT"
}
